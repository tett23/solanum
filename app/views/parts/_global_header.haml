-#encoding: utf-8

%div.navbar.navbar-fixed-top
  %div.navbar-inner
    %div.container
      %a.btn.btn-navbar{:'data-toggle'=>'collapse', :'data-target'=>'.nav-collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href=>'/'}solanum
      -unless current_account.blank?
        %div.btn-group.pull-right
          %a.btn.dropdown-toggle{:'data-toggle'=>'dropdown', :href=>'#'}
            %i.icon-user
            =current_account.name
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href=>'/users/profile'}profile
            %li.divider
            %li
              =link_to 'sign out', '/sessions/destroy', :method=>:delete
      %div.nav-collapse
        %ul.nav
          %li.active
            %a{:href=>'/'}home
          %li
            %a{:href=>'/channels'}channels
